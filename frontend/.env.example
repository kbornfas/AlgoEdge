# AlgoEdge Frontend Environment Variables
# Copy this file to .env.local for local development

# Database (Required)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (Required - must match backend)
JWT_SECRET=your-jwt-secret-key

# Admin Credentials (Required for admin login)
ADMIN_EMAIL=kbonface03@gmail.com
ADMIN_PASSWORD=BRBros@1234

# Email Configuration (for sending emails from frontend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Google OAuth (Required for Google Sign-In)
# The client ID needs NEXT_PUBLIC_ prefix to be accessible in browser
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App URL (Required for OAuth callback)
NEXT_PUBLIC_APP_URL=https://algoedgehub.com

# Public URLs (Optional)
NEXT_PUBLIC_WHATSAPP_URL=https://wa.me/254704618663
NEXT_PUBLIC_INSTAGRAM_URL=https://www.instagram.com/algoedge.hub
