# AlgoEdge Environment Variables

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
# Production: Use Render, Neon, or other PostgreSQL provider
DATABASE_URL="postgresql://user:password@localhost:5432/algoedge?schema=public"

# ============================================================================
# JWT AUTHENTICATION (Required)
# ============================================================================
# IMPORTANT: Generate a strong random secret for production (32+ characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ============================================================================
# EMAIL SERVICE (Required for user registration/notifications)
# ============================================================================
# SMTP Configuration - Use Gmail, SendGrid, or other SMTP provider
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
SMTP_FROM="AlgoEdge <noreply@algoedge.com>"
EMAIL_BATCH_DELAY_MS="2000"  # Delay between email batches in milliseconds (default: 2000)

# ============================================================================
# STRIPE PAYMENT (Optional - Required for paid subscriptions)
# ============================================================================
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# ============================================================================
# APPLICATION URLS (Required for production)
# ============================================================================
# Your deployed application URL (update for production)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
# Set to "production" for production deployment
NODE_ENV="development"

# ============================================================================
# EXTERNAL LINKS (Required for WhatsApp & Instagram CTAs)
# ============================================================================
# WhatsApp link - Format: https://wa.me/1234567890
NEXT_PUBLIC_WHATSAPP_URL="https://wa.me/your_number"
# Instagram profile link
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/your_account"

# ============================================================================
# METAAPI INTEGRATION (Required for MT5 trading)
# ============================================================================
# Get token from: https://app.metaapi.cloud/
METAAPI_TOKEN="your-metaapi-token-here"
METAAPI_ACCOUNT_ID="your-metaapi-account-id"

# ============================================================================
# ADMIN CONFIGURATION (Required)
# ============================================================================
# Default admin credentials - CHANGE THESE IN PRODUCTION!
ADMIN_EMAIL="kbonface03@gmail.com"
ADMIN_PASSWORD="BRBros@1234"
ADMIN_DEFAULT_CREATED="true"

# ============================================================================
# PAYMENT PROOF SETTINGS
# ============================================================================
# Enable payment proof requirement for user activation
PAYMENT_PROOF_REQUIRED="true"
# WhatsApp number for payment instructions
PAYMENT_WHATSAPP_NUMBER="your_payment_whatsapp_number"

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
# Maximum file size in bytes (5MB default)
MAX_FILE_SIZE="5242880"
# Allowed file types for payment proofs
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"

# ============================================================================
# SECURITY NOTES
# ============================================================================
# - Never commit .env file to version control
# - Use strong, unique passwords and secrets
# - Rotate JWT_SECRET regularly in production
# - Use environment variables in your deployment platform
# - Enable 2FA for all admin accounts
# ============================================================================
