{
  "name": "algoedge-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "AlgoEdge Trading Platform - Monorepo",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'Backend does not require build step'",
    
    "start": "npm run start:backend & npm run start:frontend",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm run test",
    
    "prisma:generate": "cd frontend && npm run prisma:generate",
    "prisma:migrate": "cd frontend && npm run prisma:migrate",
    "prisma:migrate:deploy": "cd frontend && npm run prisma:migrate:deploy",
    "prisma:push": "cd frontend && npm run prisma:push",
    
    "seed:admin": "cd frontend && npm run seed:admin",
    "seed:robots": "cd frontend && npm run seed:robots",
    "seed:all": "cd frontend && npm run seed:all",
    
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules .next",
    "clean:backend": "cd backend && rm -rf node_modules"
  },
  "keywords": [
    "trading",
    "mt5",
    "forex",
    "nextjs",
    "express"
  ],
  "author": "AlgoEdge",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
