SellStopDistance=15
StopLoss=30
TakeProfit=60
OCO_Mode=true

[Risk Management]
RiskPercent=1.0
MaxSpread=50
MaxSlippage=30
MaxDailyRisk=3.0
MaxEventsPerDay=2

[Timing]
UseServerTime=true
TimeOffset=0
