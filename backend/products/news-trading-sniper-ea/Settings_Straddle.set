; News Trading Sniper EA - Straddle Settings
; Place orders both directions before news

[News Filter]
TradeHighImpact=true
TradeMediumImpact=false
TradeLowImpact=false
NewsCountries=USD
SpecificEvents=FOMC,NFP,CPI
ExcludeEvents=

[Strategy Settings]
Strategy=Straddle
MinutesBeforeNews=2
RemoveOrdersAfter=10
OrderDistance=15

[Straddle Settings]
